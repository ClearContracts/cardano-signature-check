{
  "version": 2,
  "builds": [
    {
      "src": "api/verify.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/verify", "dest": "/api/verify.js" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
